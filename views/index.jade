extends layout

block content
  h1= title
  if (errors)
    for error in errors
      .error= error
  if (everyauth.loggedIn)
    p 
     strong Hello #{user.name}!
    #home
      a(href="/home") Home
  else 
    p Welcome to #{title}
    a(href="", onclick="popup('/auth/facebook')") Login with Facebook

  script
    function popup(url) {
      newwindow=window.open(url,'name','height=200,width=150');
      if (window.focus) {newwindow.focus()}
      return false;
    }